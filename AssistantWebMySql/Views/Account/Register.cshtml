@model AssistantWebMySql.Models.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-white mb-4">Регистрация</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Регистрация</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", @autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email)
                                    @Html.TextBoxFor(model => model.Email, new { @class = "col form-control form-control-lg" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password)
                                    @Html.TextBoxFor(model => model.Password, new { @class = "col form-control form-control-lg", type = "password" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PasswordConfirm)
                                    @Html.TextBoxFor(model => model.PasswordConfirm, new { @class = "col form-control form-control-lg", type = "password" })
                                </div>

                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Зарегистрировать</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>