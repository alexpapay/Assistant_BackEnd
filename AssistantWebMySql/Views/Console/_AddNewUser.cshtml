@model AssistantWebMySql.Models.DbSets.RegisteredUser

<div class="container-fluid">
    <h4 class="pt-5">Добавить нового пользователя:</h4>
    @using (Html.BeginForm("Create", "Console", FormMethod.Post))
    {
        <div class="row justify-content-between bg-light border-bottom pb-2">
            <div class="col-2 text-center mt-2">@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Имя"})</div>
            <div class="col-2 text-center mt-2">@Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Фамилия" })</div>
            <div class="col-2 text-center mt-2">@Html.TextBoxFor(model => model.Address, new { @class = "form-control", type = "email", placeholder = "Электронная почта" })</div>
            <div class="col-2 text-center mt-2">@Html.TextBoxFor(model => model.MacAdress, new { @class = "form-control", placeholder = "MAC-адрес" })</div>
            <div class="col-2 text-center mt-2">@Html.TextBoxFor(model => model.LicenseFinishDate, new { @class = "form-control", type = "date"})</div>
            <div class="col-2 text-center mt-2">
                <button type="submit" class="btn btn-success form-control" id="btnLogin">Добавить</button>
            </div>
        </div>
    }
</div>
